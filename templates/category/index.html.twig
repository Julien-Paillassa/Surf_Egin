        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td class="align-middle">
                    <a href="{{ path('category_edit', {'id': category.id}) }}"> <button class="btn btn-primary btn-lg ">Edit</button></a>
